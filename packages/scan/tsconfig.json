{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "~web/*": [
        "src/web/*"
      ],
      "~core/*": [
        "src/core/*"
      ],
      "~monitor/*": [
        "src/monitor/*"
      ],
      "~instrumentation/*": [
        "src/instrumentation/*"
      ]
    }
  },
  "include": [
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
